@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@inject IAuthorizationService AuthorizationService
@inject UserManager<Ecommerce.Models.ApplicationUser> UserManager

@model ECommerce.Models.Dispute

@{
    ViewData["Title"] = "Details";
}

<h2>تفاصيل</h2>

<div>
    <h4>منازعات</h4>
    <hr />

    @*Dispute*@
    <table class="table table-bordered table-striped table-responsive">
        <thead>
            <tr>
                <th colspan="4">
                    المنازعة
                </th>
            </tr>
        </thead>
        <thead>
            <tr>
                <th>
                    تاريخ البدء
                </th>
                <th>
                    المشتكي
                </th>
                <th>
                    النتيجة
                </th>
                <th>
                    الحالة
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Model.OpenedDate
                </td>
                <td>
                    @Model.Complaint
                </td>
                <td>
                    @Model.Result
                </td>
                <td>
                    @Model.Status
                </td>
            </tr>
        </tbody>
    </table>

    <br />
    <br />

    @if (Model.Arbiter != null)
    {
        @*Abriter*@
        <table class="table table-bordered table-striped table-responsive">
            <thead>
                <tr>
                    <th colspan="4">
                        الموظف
                    </th>
                </tr>
            </thead>
            <thead>
                <tr>
                    <th>
                        الاسم
                    </th>
                    <th>
                        رقم الهاتف
                    </th>
                    <th>
                        الايميل
                    </th>
                    <th>
                        العنوان
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Model.Arbiter.FullName
                    </td>
                    <td>
                        @Model.Arbiter.PhoneNumber
                    </td>
                    <td>
                        @Model.Arbiter.Email
                    </td>
                    <td>
                        @Model.Arbiter.Address
                    </td>
                </tr>
            </tbody>
        </table>
    }

    <br />
    <br />

    @*Order*@
    <table class="table table-bordered table-striped table-responsive">
        <thead>
            <tr>
                <th colspan="4">
                    الطلبية
                </th>
            </tr>
        </thead>
        <thead>
            <tr>
                <th>
                    رقم الطلبية
                </th>
                <th>
                    تاريخ الطلب
                </th>
                <th>
                    ملاحظات
                </th>
                <th>
                    الحالة
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Model.Order.Id
                </td>
                <td>
                    @Model.Order.OrderDate
                </td>
                <td>
                    @Model.Order.OrderNotes
                </td>
                <td>
                    @Model.Order.OrderStatus
                </td>
            </tr>
        </tbody>
    </table>

    <br />
    <br />

    @*Service Provider*@
    <table class="table table-bordered table-striped table-responsive">
        <thead>
            <tr>
                <th colspan="5">
                    Service Provider: @Model.Order.Service.Sprovider.CompanyName
                </th>
            </tr>
        </thead>
        <thead>
            <tr>
                <th>
                    اسم البائع
                </th>
                <th>
                    رقم الهاتف
                </th>
                <th>
                    الايميل
                </th>
                <th>
                    العنوان
                </th>
                <th>
                    صورة 
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Model.Order.Service.Sprovider.User.FullName
                </td>
                <td>
                    @Model.Order.Service.Sprovider.User.PhoneNumber
                </td>
                <td>
                    @Model.Order.Service.Sprovider.User.Email
                </td>
                <td>
                    @Model.Order.Service.Sprovider.User.Address
                </td>
                <td>
                    <img src="~/uploads/sprovider/@Model.Order.Service.Sprovider.Image" alt="@Model.Order.Service.Sprovider.CompanyName" style="width:160px; height:160px;" class="img-thumbnail" />
                </td>
            </tr>
        </tbody>
    </table>

    <br />
    <br />

    @*Service*@
    <table class="table table-bordered table-striped table-responsive">
        <thead>
            <tr>
                <th colspan="4">
                    الخدمة المقدمة
                </th>
            </tr>
        </thead>
        <thead>
            <tr>
                <th>
                    اسم الخدمة
                </th>
                <th>
                  الوصف
                </th>
                <th>
                    زمن التسليم المتوقع
                </th>
                <th>
                    صورة
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Model.Order.Service.Name
                </td>
                <td>
                    @Model.Order.Service.Description
                </td>
                <td>
                    @Model.Order.Service.ExpectedTime
                </td>
                <td>
                    <img src="~/uploads/service/@Model.Order.Service.Image" alt="@Model.Order.Service.Name" style="width:160px; height:160px;" class="img-thumbnail" />
                </td>
            </tr>
        </tbody>
    </table>

    <br />
    <br />

    @*Customer*@
    <table class="table table-bordered table-striped table-responsive">
        <thead>
            <tr>
                <th colspan="4">
                    المشتري
                </th>
            </tr>
        </thead>
        <thead>
            <tr>
                <th>
                    الاسم
                </th>
                <th>
                    رقم الهاتف
                </th>
                <th>
                    الايميل
                </th>
                <th>
                    العنوان
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Model.Order.Customer.FullName
                </td>
                <td>
                    @Model.Order.Customer.PhoneNumber
                </td>
                <td>
                    @Model.Order.Customer.Email
                </td>
                <td>
                    @Model.Order.Customer.Address
                </td>
            </tr>
        </tbody>
    </table>

    <br />
    <br />
</div>

<div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="Disputes" asp-action="CustomerDisputes" asp-route-customerId="@UserManager.GetUserId(User)">عودة للقائمة</a>
    </form>
</div>
