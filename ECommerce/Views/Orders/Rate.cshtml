@model ECommerce.Models.Order

@{
    ViewData["Title"] = "Rate";
}

<h2>Rate</h2>

<h4>Order</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Rate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ServiceId" />
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input class="form-control" asp-for="Rating" type="range" id="vol"  min="1" max="5">
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RatingNotes" class="control-label"></label>
                <input asp-for="RatingNotes" class="form-control" />
                <span asp-validation-for="RatingNotes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Rate" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="CustomerOrders" asp-route-customerId="@Model.CustomerId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
