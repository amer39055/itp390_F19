@model ECommerce.Models.Category

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Categories</h4>
    <hr />

    <table class="table table-striped table-bordered table-responsive">
        <tr>
            <th>
                Name
            </th>
            <td>
                @Model.Name
            </td>
        </tr>
        <tr>
            <th>
                Description
            </th>
            <td>
                @Model.Description
            </td>
        </tr>
        <tr>
            <th>
                Image
            </th>
            <td>
                <img src="~/uploads/category/@Model.Image" alt="@Model.Image" style="width:160px; height:160px;" class="img-thumbnail" />
            </td>
        </tr>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
