@model ECommerce.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<h2>حذف</h2>

<h3>هل تريد حذف المستخدم ؟؟</h3>
<div>
    <h4>الفئة</h4>
    <hr />
    <table class="table table-striped table-bordered table-responsive">
        <tr>
            <th>
                الاسم
            </th>
            <td>
                @Model.Name
            </td>
        </tr>
        <tr>
            <th>
               الوصف
            </th>
            <td>
                @Model.Description
            </td>
        </tr>
        <tr>
            <th>
                صورة
            </th>
            <td>
                <img src="~/uploads/category/@Model.Image" alt="@Model.Image" style="width:160px; height:160px;" class="img-thumbnail" />
            </td>
        </tr>
    </table>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">عودة الى القائمة</a>
    </form>
</div>
