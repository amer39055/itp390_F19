@model ECommerce.Models.Service

@{
    ViewData["Title"] = "حذف";
}

<h2>حذف</h2>

<h3>يرجى التاكد قبل الحذف?</h3>
<div>
    <h4>Service</h4>
    <hr />
    <table class="table table-striped table-bordered table-responsive">
        <tr>
            <th>
                بائع الخدمة
            </th>
            <td>
                @Model.Sprovider.CompanyName
            </td>
        </tr>
        <tr>
            <th>
                اسم الخدمة
            </th>
            <td>
                @Model.Name
            </td>
        </tr>
        <tr>
            <th>
                السعر
            </th>
            <td>
                @Model.Price
            </td>
        </tr>
        <tr>
            <th>
                زمن التسليم
            </th>
            <td>
                @Model.ExpectedTime
            </td>
        </tr>
        <tr>
            <th>
                صورة
            </th>
            <td>
                <img src="~/uploads/service/@Model.Image" alt="@Model.Name" style="width:160px; height:160px;" class="img-thumbnail" />
            </td>
        </tr>
    </table>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-SproviderId="@Model.SproviderId">عودة</a>
    </form>
</div>
